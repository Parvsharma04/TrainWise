generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id              String        @id @default(uuid())
  name            String
  email           String        @unique
  password        String
  user_details_id String?       @unique
  user_badges_id  String?       @unique
  user_badges     user_badges?  @relation(fields: [user_badges_id], references: [id])
  user_details    user_details? @relation(fields: [user_details_id], references: [id])
}

model user_details {
  id              String  @id @default(uuid())
  avatar          String?
  time_worked_out Int     @default(0)
  score           Int     @default(0)
  streak          Int     @default(0)
  weight          Int     @default(0)
  height          Int     @default(0)
  gender          String? @default("Null")
  age             Int     @default(0)
  user            user?
}

model user_badges {
  id          String  @id @default(uuid())
  name        String? @default("Null")
  description String? @default("Null")
  image       String? @default("Null")
  user        user?
}

model exercises {
  id          String     @id @default(uuid())
  name        String
  difficulty  difficulty
  description String?
  image_url   String?
}

enum difficulty {
  EASY
  MEDIUM
  HARD
}
